<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/txt_item_bpm_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_centerVertical="true"
        android:textColor="@color/TextTitle"
        android:text="50"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_item_bpm_point"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sistolik/Diastolik"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/txt_bpm_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout><!-- From: file:/D:/NUSANTARA%20BETA%20STUDIO/ExSYS-ENRIKO/UpdatedCode/app/src/main/res/layout/item_bpm.xml -->